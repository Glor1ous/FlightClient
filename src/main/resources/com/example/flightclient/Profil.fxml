<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flightclient.Controller.ProfilController">
   <children>
      <Label layoutX="39.0" layoutY="61.0" text="Почта: ">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="emailLabel" layoutX="124.0" layoutY="68.0" text="email">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Button fx:id="changeEmailButton" layoutX="342.0" layoutY="61.0" mnemonicParsing="false" onAction="#handleChangeEmail" style="-fx-background-color: #2771B9;" text="Изменить почту" textFill="WHITE" />

      <Label layoutX="39.0" layoutY="112.0" text="Пароль: ">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="passwordLabel" layoutX="130.0" layoutY="119.0" text="******">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Button fx:id="changePasswordButton" layoutX="342.0" layoutY="112.0" mnemonicParsing="false" onAction="#handleChangePassword" style="-fx-background-color: #2771B9;" text="Изменить пароль" textFill="WHITE" />

      <Button fx:id="ExitButton" onAction="#handleExit" layoutX="270.0" layoutY="332.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="185.0" style="-fx-background-color: #2771B9;" text="Выйти из аккаунта" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button fx:id="logoutButton"   layoutX="476.0" onAction="#handleLogout" layoutY="332.0" mnemonicParsing="false"  prefHeight="36.0" prefWidth="86.0" style="-fx-background-color: #2771B9;" text="Выйти" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Line endX="100.0" layoutX="225.0" layoutY="87.0" startX="-100.0" stroke="#2771b9" />
      <Line endX="100.0" layoutX="225.0" layoutY="137.0" startX="-100.0" stroke="#2771b9" />
   </children>
</AnchorPane>
